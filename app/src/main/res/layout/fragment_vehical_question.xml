<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_front_white"
    android:paddingLeft="@dimen/default_margin_padding_large">
    
    <TextView
        android:textColor="@color/color_front_black"
        android:layout_marginTop="@dimen/default_margin_padding_large"
        android:text="Check Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/color_front_black"
        android:layout_marginTop="@dimen/default_margin_padding_large"
        android:text="Two Way Radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/default_margin_padding_large"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Yes"
            android:textColor="@color/color_front_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/default_margin_padding_medium"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="No"
            android:textColor="@color/color_front_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <EditText
        android:hint="Comment"
        android:layout_marginTop="@dimen/default_margin_padding_large"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="@dimen/default_margin_padding_small"
        android:layout_marginRight="@dimen/default_margin_padding_large"
        android:background="@drawable/rectangle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_margin_padding_large"
        android:layout_marginTop="@dimen/default_margin_padding_medium">

        <Button
            android:id="@+id/a2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_left" />


        <Button
            android:id="@+id/a1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_right" />

        <Button
            android:visibility="gone"
            android:id="@+id/a4"
            android:text="FINISH"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@color/color_theme_red" />

    </RelativeLayout>

    <TextView
        android:id="@+id/a3"
        android:textColor="@color/color_front_black"
        android:layout_marginTop="@dimen/default_margin_padding_large"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>